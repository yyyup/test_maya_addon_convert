                "mid": "knee",
                "toeTip_piv": "toeTip",
                "ball": "ball",
                "endik": "foot",
                "inner_piv": "inner",
                "worldUpVec":  "worldUpVec",
                "worldUpVecRef":  "worldUpVecRef",
                "tangent00Out":"tangent00Out",
                "tangent01Out":"tangent01Out",
                "tangent01In":"tangent01In",
